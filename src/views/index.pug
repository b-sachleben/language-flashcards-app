extends layout.pug

block content
  .row
    .col-md-12
      p.add-card-button
      br
      br
      h3 Flashcard List
      .table-responsive-sm
        table.table.table-striped.card-list
          thead
            th(scope='col')
            th(scope='col')
              | Japanese
            th(scope='col')
              | English
          tbody#data
            each prompt, index in cardPrompts
              tr
                th(scope='row')= index + 1
                td.kana!= prompt.japanesePhrase
                td= prompt.englishTranslation
                td.details-button(data-database-id= prompt._id data-mode-of-use="admin")
      ul.page-select.btn-group
        li.first-page-button
        //- a.btn.btn-outline-secondary.btn-sm(href='') &laquo;
        li.prev-page-button
        //- a.btn.btn-outline-secondary.btn-sm(href='') &lsaquo;
        
        //- populate page buttons
        - var i = 0;
        while i < totalPages
          li(class="page-number-button")= i++
        //- a.btn.btn-outline-secondary.btn-sm(href='') 1

        li.next-page-button
        //- a.btn.btn-outline-secondary.btn-sm(href='') &rsaquo;
        li.last-page-button
